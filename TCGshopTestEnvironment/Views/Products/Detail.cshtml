@model TCGshopTestEnvironment.ViewModels.ProductsDetailModel
@{ViewBag.Title = "Detail View";
}

<div id="asssets">
    <div id="productsTable">
        <div class="container">
            <div class="row detailProduct">
                <div class="col-md-6 text-center">
                    <tr class="assetRow">
                        <td class=""><img src="@(Startup.storagePath + Model.ImageUrl + ".png")" class="" style="height: 300px; width: 240px;" /></td>
                </div>

                <div class="col-md-6">
                    <h1 class="display-1">@Model.Name</h1>
                    <label class="GradeText" style="font-size: 1.5rem;">[@Model.Grade]</label>
                    <p style="margin-top:5px;">
                        <strong>Description</strong> <br />
                        @Model.Description
                    </p>
                    <p>
                        <strong>Stock</strong> <br />
                        @Model.Stock
                    </p>

                    <p>

                        <h3> €@Model.Price</h3>
                    </p>

                </div>
                </tr>
            </div>
        </div>
    </div>
</div>
</div>
